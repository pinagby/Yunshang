{% extends "YunshangManageBundle::layout/manage_base.html.twig" %}

{% block manage_content %}
<h1>ProductCategory edit</h1>

<form action="{{ path('product_category_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
    {{ form_widget(edit_form) }}
        <p class="act"><button type="submit">Edit</button></p>
</form>

<ul class="record_actions">
    <li>
        <a href="{{ path('product_category') }}">
            Back to the list
        </a>
    </li>
    <li>
        <form action="{{ path('product_category_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
{% endblock %}
