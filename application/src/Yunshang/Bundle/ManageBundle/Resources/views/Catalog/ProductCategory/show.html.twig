{% extends "YunshangManageBundle::layout/manage_base.html.twig" %}

{% block manage_content %}
<h1>ProductCategory</h1>

<table class="record_properties">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Name</th>    
            <td>{{ entity.name }}</td>
        </tr>
        <tr>
            <th>Description</th>  
            <td>{{ entity.description }}</td>
        </tr>
        <tr>
            <th>Created</th>   
            <td>{{ entity.created|date('Y-m-d H:i:s') }}</td>
        </tr>
        <tr>
            <th>Modified</th>    
            <td>{{ entity.modified|date('Y-m-d H:i:s') }}</td>
        </tr>
        <tr>
            <th>Sequence</th>     
            <td>{{ entity.sequence }}</td>
        </tr>
        <tr>
            <th>Creator</th>   
            <td>{{ entity.creator }}</td>
        </tr>
        <tr>
            <th>Parent</th>   
            <td>{{ entity.parent }}</td>
        </tr>
        <tr>
            <th>Isroot</th>   
            <td>{{ entity.isRoot }}</td>
        </tr>
    </tbody>
</table>

<ul class="record_actions">
    <li>
        <a href="{{ path('product_category') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('product_category_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>
        <form action="{{ path('product_category_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
{% endblock %}
