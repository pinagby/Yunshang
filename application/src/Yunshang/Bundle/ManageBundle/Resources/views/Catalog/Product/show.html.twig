{% extends "YunshangManageBundle::layout/manage_base.html.twig" %}

{% block manage_content %}
<h1>Product</h1>

<table class="record_properties">
    <tbody>
        <tr>
            <th>Id</th>                <td>{{ entity.id }}</td>        </tr>
        <tr>
            <th>Name</th>                <td>{{ entity.name }}</td>        </tr>
        <tr>
            <th>Description</th>                <td>{{ entity.description }}</td>        </tr>
        <tr>
            <th>Shortdescription</th>                <td>{{ entity.shortDescription }}</td>        </tr>
        <tr>
            <th>Status</th>                <td>{{ entity.status }}</td>        </tr>
        <tr>
            <th>Created</th>                <td>{{ entity.created|date('Y-m-d H:i:s') }}</td>        </tr>
        <tr>
            <th>Modified</th>                <td>{{ entity.modified|date('Y-m-d H:i:s') }}</td>        </tr>
        <tr>
            <th>Started</th>                <td>{{ entity.started|date('Y-m-d H:i:s') }}</td>        </tr>
        <tr>
            <th>Ended</th>                <td>{{ entity.ended|date('Y-m-d H:i:s') }}</td>        </tr>
        <tr>
            <th>Code</th>                <td>{{ entity.code }}</td>        </tr>
        <tr>
            <th>Price</th>                <td>{{ entity.price }}</td>        </tr>
        <tr>
            <th>Specialprice</th>                <td>{{ entity.specialPrice }}</td>        </tr>
        <tr>
            <th>Specialpricestarted</th>                <td>{{ entity.specialPriceStarted|date('Y-m-d H:i:s') }}</td>        </tr>
        <tr>
            <th>Specialpriceended</th>                <td>{{ entity.specialPriceEnded|date('Y-m-d H:i:s') }}</td>        </tr>
        <tr>
            <th>Mainpicture</th>                <td>{{ entity.mainPicture }}</td>        </tr>
        <tr>
            <th>Amount</th>                <td>{{ entity.amount }}</td>        </tr>
        <tr>
            <th>Specialamount</th>                <td>{{ entity.specialAmount }}</td>        </tr>
    </tbody>
</table>

<ul class="record_actions">
    <li>
        <a href="{{ path('product') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('product_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>
        <form action="{{ path('product_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
{% endblock %}
