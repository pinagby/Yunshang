{% extends "YunshangManageBundle::layout/manage_base.html.twig" %}

{% block manage_content %}

<h1>Product Category</h1>
<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Description</th>
            <th>Parent</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td>{{ entity.id }}</td>
            <td><a href="{{ path('product_category_show', { 'id': entity.id }) }}">{{ entity.name }}</a></td>
            <td>{{ entity.description }}</td>
            <td>{{ entity.parent }}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('product_category_edit', { 'id': entity.id }) }}">Edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('product_category_new') }}">
            Create a new entry
        </a>
    </li>
</ul>
{% endblock %}
